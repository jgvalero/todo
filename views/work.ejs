<%- include('partials/header.ejs') %>

<h1 class="text-light">Work To-Do List</h1>
<div class="panel rounded col-12">
  <form action="/work" method="POST">
    <div class="input-group p-3">
      <input type="text" class="form-control" name="item" required />
      <input type="submit" class="btn btn-primary" value="Add Item" />
    </div>
  </form>

  <% if (locals.itemsWork) { %> <% for( let index=0; index < itemsWork.length;
  index++ ) { %>
  <div class="mx-3 mb-3 form-check">
    <input
      class="form-check-input"
      type="checkbox"
      name="checked"
      id="checkbox"
    />
    <label class="form-check-label"> <%= itemsWork[index] %> </label>
  </div>

  <% } %> <% } %>
</div>

<%- include('partials/footer.ejs') %>
